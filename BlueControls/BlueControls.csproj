<Project Sdk="Microsoft.NET.Sdk">
  
  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <LangVersion>preview</LangVersion>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <RootNamespace>BlueControls</RootNamespace>
    <AssemblyName>BlueControls</AssemblyName>
    <OutputType>Library</OutputType>
    <Platforms>AnyCPU;x86;x64</Platforms>
    <UseWindowsForms>true</UseWindowsForms>
    <UseWPF>true</UseWPF>
    
    <!-- Ressourcen-Handling für .NET Framework -->
    <GenerateResourceUsePreserializedResources>true</GenerateResourceUsePreserializedResources>
    
    <!-- Assembly-Informationen -->
    <Version>1.0.0</Version>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
    <Company>BlueControls</Company>
    <Product>BlueControls</Product>
    <Copyright>Copyright © 2025</Copyright>
    
    <!-- Runtime Identifiers -->
    <RuntimeIdentifiers>win-x64;win-x86;win</RuntimeIdentifiers>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Debug'">
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <Optimize>false</Optimize>
    <DefineConstants>DEBUG;TRACE</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <DebugType>pdbonly</DebugType>
    <Optimize>true</Optimize>
    <DefineConstants>TRACE</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Ressources\Dictionary\Deutsch.BDB" />
    <None Remove="Ressources\Styles\Styles.BDB" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Ressources\Dictionary\Deutsch.BDB" />
    <EmbeddedResource Include="Ressources\Styles\Styles.BDB" />
  </ItemGroup>

  <ItemGroup>
    <!-- Ressourcen-Serialisierung -->
    <PackageReference Include="FCTB" Version="2.16.24" />
    <PackageReference Include="System.Resources.Extensions" Version="8.0.0" />
    
    <!-- Code-Analyse -->
    <PackageReference Include="Microsoft.CodeAnalysis.NetAnalyzers" Version="10.0.100">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <!-- .NET Framework Referenzen -->
    <Reference Include="PresentationCore" />
    <Reference Include="PresentationFramework" />
    <Reference Include="System" />
    <Reference Include="System.Core" />
    <Reference Include="System.Design" />
    <Reference Include="System.Drawing" />
    <Reference Include="System.Windows" />
    <Reference Include="System.Windows.Forms" />
    <Reference Include="WindowsBase" />
  </ItemGroup>

  <!-- App Manifest -->
  <ItemGroup>
    <None Include="app.manifest" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\BlueBasics\BlueBasics.csproj" />
    <ProjectReference Include="..\BlueScript\BlueScript.csproj" />
    <ProjectReference Include="..\BlueTable\BlueTable.csproj" />
  </ItemGroup>

</Project>